alias psh="poetry shell"


pwdf() {
    if [ -z "$1" ]; then
        echo "Usage: pwdf <filename>"
        return 1
    fi
    echo "$(pwd)/$1"
}
alias pwdf=pwdf

grf() {
    if [ -z "$1" ]; then
        echo "Usage: grf <whole_or_part_of_filename>"
        return 1
    fi
    find . -type f -name "*$1*"
}
grd() {
    if [ -z "$1" ]; then
        echo "Usage: grf <whole_or_part_of_dirname>"
        return 1
    fi
    find . -type d -name "*$1*"
}
alias gr="grep -r"
alias grf=grf
alias grff="find . -name"
alias grd=grd

alias findbig="find . -type f -size +100M -exec ls -lh {} \;"

